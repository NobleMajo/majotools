{
  "name": "majotools",
  "description": "A javascript&typescript library with basic constants, types, interfaces, function and classes.",
  "version": "1.2.4",
  "main": "dist/index.js",
  "author": "majo418",
  "license": "MIT",
  "private": false,
  "keywords": [
    "node",
    "typescript",
    "lib",
    "majo",
    "assets"
  ],
  "scripts": {
    "start": "ts-node src/index.ts",
    "exec": "node dist/index.js",
    "tsc": "tsc -p tsconfig.json",
    "test": "mocha --require ts-node/register src/test/**/*.test.ts",
    "build": "npm run tsc",
    "start:watch": "nodemon --ext \"*.ts\" -w \"${PWD}/src/**/*\" -x \"npm run start\"",
    "build:watch": "nodemon --ext \"*.ts\" -w \"${PWD}/src/**/*\" -x \"npm run build\"",
    "test:watch": "nodemon -w \"${PWD}/src/**/*\" -x \"npm run test\"",
    "exec:watch": "nodemon -w \"${PWD}/dist/**/*\" -x \"npm run exec\"",
    "dev": "npm run start:watch"
  },
  "repository": {
    "url": "git@github.com:majo418/majotools.git",
    "type": "git"
  },
  "devDependencies": {
    "@types/chai": "^4",
    "@types/mocha": "^8",
    "@types/node": "^16.11.25",
    "chai": "^4",
    "mocha": "^9",
    "nodemon": "^2",
    "ts-node": "^10",
    "typescript": "^4"
  }
}